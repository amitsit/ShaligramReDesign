                <a href="mailto:info@ShaligramInfotech.com" class="pb-30">info@ShaligramInfotech.com</a>

                <h4 class="pb-10 pt-10">Talk To An Expert</h4>
                <a href="tel:07929702400" class="pb-10">07929702400</a>
                <div class="clearfix"></div>
                <a href="tel:07929702500">07929702500</a>

            </div>


            <div class="col-sm-6">
                <div class="service-form">
                    <form name="contactUsForm">
                        <div class="sidebar-form">
                            <div class="input-field">
                                <i class="fa fa-user"></i>
                                <input class="form-input" type="text" placeholder="Name" ng-model="ContactUs.Name" maxlength="40" required/>
                            </div>
                            <div class="input-field">
                                <i class="fa fa-envelope"></i>
                                <input class="form-input" type="email" placeholder="Email" ng-model="ContactUs.Email" maxlength="50" required/>
                            </div>
                            <div class="input-field">
                                <i class="fa fa-phone"></i>
                                <input class="form-input" type="text" onkeypress="return (event.charCode >= 48 && event.charCode <= 57) || (event.charCode === 0)"  placeholder="Phone" ng-model="ContactUs.Phone"  maxlength="12" required/>
                            </div>
                            <div class="input-field">
                                <i class="fa fa-building-o"></i>
                                <input class="form-input" type="text" placeholder="City" ng-model="ContactUs.City" maxlength="40" required=""/>
                            </div>
